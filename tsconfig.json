{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "baseUrl": "./src",
    "build": false,
    "allowJs": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "strict": true,
    "strictNullChecks": true,
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": false,
    "paths": {
      "*": [
        "./src*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}